generator client {
  provider   = "prisma-client-js"
  output     = "../generated/prisma"
  engineType = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  tasks        Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String
  priority    String
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
